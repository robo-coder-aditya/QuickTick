<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QuickTick Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
</head>
<body class="bg-white min-h-screen">

  <!-- Header -->
  <header class="flex justify-between items-center bg-[#FFF0E6] px-6 py-4">
    <div class="text-[#F88837] text-2xl font-semibold">QuickTick</div>
    <a href="/profile" class="flex items-center space-x-3">
      <img src="./assets/Profile.png" alt="Profile picture" class="w-12 h-12 rounded-full object-cover" />
      <div class="text-black text-lg font-medium"><%= username %></div>
    </a>
  </header>

  <div class="flex">
    <!-- Sidebar -->
    <aside class="hidden md:flex flex-col bg-white w-56 p-4 gap-4 border-r-2 border-[#FFF0E6]">
      <a href="/daily" class="block">
        <div class="flex items-center gap-2 md:gap-3 p-2 rounded-md">
            <img src="/assets/Home.png" alt="Dashboard icon" class="w-5 h-5">
            <span class="text-[#F88837] text-sm md:text-base font-medium">Dashboard</span>
        </div>
        </a>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 px-8 py-8 space-y-8 max-w-4xl">

      <!-- Settings title -->
      <h2 class="text-black text-[40px] font-medium leading-[50px]">Your Account</h2>

      <!-- Change password card -->
      <form action="/changePassword" method="POST" class="relative border border-[#F88837] rounded-[15px] p-5 space-y-4 w-full max-w-[646px]">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="flex justify-between items-center">
            <div>
            <h3 class="text-black text-[24px] font-medium">Change password</h3>
            </div>
            <!-- Dropdown arrow in anchor -->
            <a href="/profile" class="w-5 h-5">
            <img src="./assets/Collapse Arrow.png" alt="Expand arrow" class="w-5 h-5">
            </a>
        </div>
        <% if (locals.errorMessage) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 text-sm max-w-md mx-auto text-center">
                <p><%= errorMessage %></p>
            </div>
        <% } %>


        <!-- Input fields -->
        <div class="space-y-6 mt-4">
            <div>
            <label class="block text-black text-[16px] mb-1">Current password</label>
            <input type="password" name="existingPassword" placeholder="Enter your current password" 
                class="w-full max-w-[594px] border border-[#4A4A4A] rounded-[5px] py-3 px-4 text-[18px] text-[#666]"/>
            </div>
            <div>
            <label class="block text-black text-[16px] mb-1">New password</label>
            <input type="password" name="newPassword" placeholder="Enter new password" 
                class="w-full max-w-[594px] border border-[#4A4A4A] rounded-[5px] py-3 px-4 text-[18px] text-[#666]"/>
            </div>
            <div>
            <label class="block text-black text-[16px] mb-1">Confirm password</label>
            <input type="password" name="confirmPassword" placeholder="Confirm new password" 
                class="w-full max-w-[594px] border border-[#4A4A4A] rounded-[5px] py-3 px-4 text-[18px] text-[#666]"/>
            </div>
        </div>

        <button type="submit" class="mt-6 inline-block bg-[#FE9950] text-white text-[20px] font-medium w-full max-w-[593px] py-3 rounded-[10px] text-center hover:bg-orange-500 transition">
            Update password
        </button>
    </form>

      <!-- Log out card -->
      <div class="border border-[#FE9950] rounded-[15px] p-6 space-y-4 w-full max-w-[646px]">
        <h3 class="text-black text-[24px] font-medium">Log out</h3>
        <p class="text-black text-[16px]">You will be logged out from your account</p>
        <!-- Log out button in anchor -->
        <a href="/logout" class="bg-[#EC0909] text-white text-[20px] font-medium w-full max-w-[593px] py-3 rounded-[10px] text-center hover:bg-red-700 transition block">
          Log out
        </a>
      </div>
    </main>
  </div>

</body>
</html>